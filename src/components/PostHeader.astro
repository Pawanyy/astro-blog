---
import { slugify, fromatDate } from "../js/utils";
import { Image } from "@astrojs/image/components";

const { title, category, author, date, image } = Astro.props;
---

<header>
  <div class="container">
    <small>
      <a class="badge" href={`/category/${slugify(category)}/`}>
        {category}
      </a>
    </small>
    <h1 class="h2">{title}</h1>
    <p>by <a href={`\author/${slugify(author)}/`}>{author}</a></p>
    <time>{fromatDate(date)}</time>
  </div>
  <Image
    src={image.src}
    alt={image.alt}
    width={1200}
    height={600}
    format="webp"
    fit="cover"
    class="hero-image"
  />
</header>
