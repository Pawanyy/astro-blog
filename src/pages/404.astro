---
// component imports
import MainLayout from "../layouts/MainLayout.astro";
import Link from "../components/Link.astro";
---

<MainLayout title="Page Not Found" description="this is 404 page">
  <section
    class="container"
    style={{
      display: "grid",
      placeItems: "center",
      textAlign: "center",
      gap: "var(--small-sm)",
    }}
  >
    <div>
      <h1 class="h1">404 Not found</h1>
      <p>the page you are looking for does not exist</p>
    </div>
    <Link
      href="/"
      style="secondary"
      text="Go Home"
      icon={{ name: "tabler:home", side: "left" }}
    />
  </section>
</MainLayout>
